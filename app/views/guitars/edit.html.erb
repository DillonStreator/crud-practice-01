<a href="/guitars">back to all guitars</a>
<h1>Edit guitar</h1>
<%= form_tag "/guitars/#{@guitar.id}/update", method: :post do %>
  <p>Name: <input type="text" class="form-control" name="name" value="<%= @guitar.name %>"></p>
  <p>Strings: <input type="text" class="form-control" name="strings" value="<%= @guitar.strings %>"></p>
  <p>Image: <input type="text" class="form-control" name="image" value="<%= @guitar.image %>"></p>
  <p>Color: <input type="text" class="form-control" name="color" value="<%= @guitar.color %>"></p>
  <p>Description: <input type="text" class="form-control" name="description" value="<%= @guitar.description %>"></p>
  <input type="submit" value="Add guitar">
<% end %>